<div class="modal fade" id="editModal" tabindex="-1" role="dialog" aria-labelledby="editModalLabel">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="editModalLabel">Edit Row</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span>&times;</span>
                </button>
            </div>
            <div class="modal-body" id="modalBodyContent">
                <!-- Dynamic content will be injected here -->
            </div>
            <div class="modal-footer d-flex flex-wrap align-items-center justify-content-end w-100 gap-2">
                <label class="me-1 mb-0">Checked-In by</label>
                <input type="text" id="checkedInBy" name="checkedInBy" class="form-control form-control-sm me-3" style="width: 200px;">

                <label class="me-1 mb-0">Checked-Out by</label>
                <input type="text" id="checkedOutBy" name="checkedOutBy" class="form-control form-control-sm me-3" style="width: 200px;">

                <!-- Print Routing Sheet Button -->
                <button class="btn btn-primary me-2" id="printRoutingSheet" style="display:none">
                    <i class="fa fa-print"></i> Print Routing Sheet
                </button>

                <!-- Checked In -->
                <label for="checkedIn" class="me-1">Checked In</label>
                <select class="form-control me-3" id="checkedIn" name="checkedIn" style="width: auto;">
                    <option value="Yes">Yes</option>
                    <option value="No" selected>No</option>
                </select>

                <!-- Checked Out -->
                <label for="checkedOut" class="me-1">Checked Out</label>
                <select class="form-control me-3" id="checkedOut" name="checkedOut" disabled style="width: auto;">
                    <option value="Yes">Yes</option>
                    <option value="No" selected>No</option>
                </select>

                <!-- Close Button -->
                <button type="button" class="btn btn-secondary text-white me-2" data-dismiss="modal">Close</button>

                <!-- Save Changes Button -->
                <button type="button" id="saveChangesButton" class="btn btn-primary text-white" onclick="saveChangesButton()">Save Changes</button>
            </div>

        </div>
    </div>
</div>